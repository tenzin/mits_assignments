@{
    ViewData["Banner Title"] = "Restaurant Location";
}

<script src="http://maps.googleapis.com/maps/api/js?key=AIzaSyAfVmuyMPuoIjaLeSRVtgWTpxadlfnAaDw"></script>

<script>
    // Declare a variable for map
    var map;
    // Get lattitude and longitude of Canberra Centre
    var canberraCentre = new google.maps.LatLng(-35.2792284, 149.132313);

    // Initialise the map
    function initMap() {
        // Define the properties for Canberra Centre map
        var canberraMap = {
            center: canberraCentre,
            zoom: 13,
            mapTypeId: google.maps.MapTypeId.ROADMAP
        };

        // Create a map object for Canberra Centre 
        // using canberraMap and the <div> element with id="googleMap"
        map = new google.maps.Map(
                  document.getElementById("googleMap"), canberraMap);

        // Add markers below this line
        addItalianSons(map);
        addJamiesItalian(map);
        addChairmanYip(map);
        addDicksonNoodleHouse(map);
        addBluGinger(map);
        addjewelOfIndia(map);
    }

    //Function to plot Italian and Sons
    function addItalianSons(map) {
        
        var italianSons = 
            new google.maps.LatLng(-35.2750109,149.13228879999997);
        var markerItalianSons = new google.maps.Marker({ 
            position: italianSons,
        });

        markerItalianSons.setMap(map);

        var contentItalianSons =
        '<div class="restaurant-item row">'+
            '<h2 class="col-xs-12">Italian and Sons</h2>'+
            '<div class="col-md-3">'+
                '<img class="img-responsive" src="../images/is_logo.gif" />'+
            '</div>'+
            '<div class="col-md-9">'+
                '<p>“A casual Italian trattoria that specialises in wood fired pizzas such as Rucola with Prosciutto di Parma, rucola & reggiano. Don’t miss daily changing main dishes of the day such as their wood roast suckling pig, rosemary, garlic, baked baby fennel & mustard fruits” – Australian good Food Guide</p>'+
                '<p><a href="https://italianandsons.com.au/" target="_blank">Click Here</a> for the Italian and Sons website.</p>'+
            '</div>'+
        '</div>';

        var infoItalianSons = new google.maps.InfoWindow({
            content: contentItalianSons
        });

        google.maps.event.addListener(markerItalianSons, 'click', 
        function () {
            infoItalianSons.open(map, markerItalianSons);
        });
    }
    
    //Function to plot Jamie's Italian
    function addJamiesItalian(map) {
        
        var jamiesItalian = 
            new google.maps.LatLng(-35.27775,149.13279009999997);
        var markerJamiesItalian = new google.maps.Marker({ 
            position: jamiesItalian,
        });

        markerJamiesItalian.setMap(map);

        var contentJamiesItalian =
        '<div class="restaurant-item row">'+
            '<h2 class="col-xs-12">Jamie\’s Italian</h2>'+
            '<div class="col-md-3">'+
                '<img class="img-responsive" src="../images/jamie_logo.png" />'+
            '</div>'+
            '<div class="col-md-9">'+
                '<p>“With prime position in the Canberra Centre on Bunda Street, Jamie’s Italian is the perfect place for a mid-shopping pit stop, or a buzzing evening out. With beautiful room-height windows and impressive lofty ceilings, the restaurant is full of atmosphere” – Jamie\’s Italian Website</p>'+
                '<p><a href="https://www.jamieoliver.com/italian/australia/restaurants/canberra/" target="_blank">Click Here</a> for the Jamie\’s Italian Canberra website.</p>'+
            '</div>'+
        '</div>';

        var infoJamies = new google.maps.InfoWindow({
            content: contentJamiesItalian
        });

        google.maps.event.addListener(markerJamiesItalian, 'click', 
        function () {
            infoJamies.open(map, markerJamiesItalian);
        });
    }

