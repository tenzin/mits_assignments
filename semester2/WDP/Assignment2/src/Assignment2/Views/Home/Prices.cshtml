@{
    ViewData["Banner Title"] = "Prices";
}

<script>
$(document).ready(function(){
        $("#prices .prices-buttons a").first().addClass("active");
    $("#prices .prices-list").not($("#prices .prices-list").first()).css("display","none");

    $("#prices a").click(function(){
        var $index = $(this).index();
            
        $("#prices a").removeClass("active");
        $(this).addClass("active");
        $("#prices .prices-list").css("display","none");
            $("#prices .prices-list").eq($index).slideDown("fast");
    });

} );
</script>

